#include <stdio.h>

int main() {
	//code
	int i,j,k,n;
	scanf("%d",&n);
	for(i=1;i<=n;i++)
	{
	    for(j=1;j<=n-i;j++)
	    {
	        printf(" ");
	        
	    }
	    for(int k=1;k<=((2*i)-1);k++)//
	    {
	        printf("*");
	        //printf(" ");
	    }
	    printf("\n");
	}
	for(i=n-1;i>=1;i--)
	{
	    for(j=1;j<=n-i;j++)
	    {
	        printf(" ");
	    }
	    for(int k=1;k<=((2*i)-1);k++)
	    {
	        printf("*");
	        //printf(" ");
	    }
	    printf("\n");
	}
	return 0;
}
